{
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "import/order": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "jsxSingleQuote": false
      }
    ],
    "tailwindcss/no-custom-classname": [
      "warn",
      {
        "whitelist": [
          "header",
          "home-projects-text",
          "logo-text",
          "logo-text-small",
          "grid-services-cards",
          "grid-projects",
          "grid-project",
          "animate-pulse-fast",
          "cookie-policy-h1",
          "cookie-policy-p",
          "cky-audit-table-element",
          "cky-banner-element",
          "subhero-text"
        ]
      }
    ]
  },
  "plugins": ["tailwindcss"]
}
